<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="businessapp.technorbit.shree.pccontrolapp.IpActivity"
    tools:showIn="@layout/activity_ip">

    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/logo"
        android:id="@+id/img"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_below="@+id/img"
        android:id="@+id/txtIpdisp"
        android:layout_marginTop="10dp"
        android:textColor="#1919ff"
        android:paddingLeft="5dp"
        android:text="Enter Server Ip Address"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtIpdisp"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:text="192.168.1.103"
        android:id="@+id/editTextIP"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Proceed"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/editTextIP"
        android:id="@+id/btnSetIp"/>

</RelativeLayout>
